<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/player_miniAlbumArt_iv"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/player_title_tv"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Title"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/player_artist_tv"
            android:text="Artist"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/player_previous_ib"
        android:background="@null"
        android:src="@mipmap/ic_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/player_play_ib"
        android:background="@null"
        android:src="@drawable/selector_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/player_next_ib"
        android:background="@null"
        android:src="@mipmap/ic_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>